<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="prod_plan_tree_view" model="ir.ui.view">
        <field name="name">production.plan.tree</field>
        <field name="model">production.plan</field>
        <field name="arch" type="xml">
            <tree string="Production Plan" sample="1">
                <field name="active" invisible="1"/>
                <field name="ref"/>
                <field name="season_id"/>
                <field name="distribution_plan"/>
            </tree>
        </field>
    </record>

    <record id="prod_plan_form_view" model="ir.ui.view">
        <field name="name">production.plan.form</field>
        <field name="model">production.plan</field>
        <field name="arch" type="xml">
            <form string="Production Plan">
                <header>
                    <button name="action_confirm" string="Confirm"
                        type="object" class="oe_highlight"
                        attrs="{'invisible': [ ('state', '!=', 'draft')]}"/>
                    <button name="action_manufacture" string="Manufacture"
                        type="object" class="oe_highlight"
                        attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- mrp production orders button -->
                            <button name="action_mrp_production_show" type="object"
                                    class="oe_stat_button" icon="fa-bars"
                                    attrs="{'invisible': [('mrp_orders_count','=', 0)]}">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_text">
                                        <field name="mrp_orders_count"/>
                                        <span> Mrp Orders</span>
                                    </span>
                                </div>
                            </button>
                    </div>

                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>

                    <group>

                        <field name="active" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                        <h1>
                            <field name="ref" readonly="True"/>
                        </h1>
                    </group>
                    <group>
                        <field name="season_id"/>
                        <field name="distribution_plan"/>
                    </group>
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <field name="production_line" widget="one2many">
                                <tree string="Product Variants" editable="bottom">
                                    <field name="company_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="production_amount"/>
                                </tree>
                            </field>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <field name="production_tmp_line" widget="one2many">
                                <tree string="Products" editable="bottom">
                                    <field name="company_id" invisible="1"/>
                                    <field name="product_template_id"/>
                                    <field name="production_amount"/>
                                </tree>
                            </field>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" colspan="4" nolabel="1"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_prod_plan_show" model="ir.actions.act_window">
        <field name="name">Production Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">production.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No production plan found. Let's create one!
            </p>
            <p>
                Distribution plan allow you to define of produced product and its amount.
            </p>
        </field>
    </record>
</odoo>