<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="season_tree_view" model="ir.ui.view">
        <field name="name">season.tree</field>
        <field name="model">season</field>
        <field name="arch" type="xml">
            <tree string="Seasons" sample="1">
                <field name="active" invisible="1"/>
                <field name="name"/>
                <field name="ref"/>
            </tree>
        </field>
    </record>

    <record id="season_form_view" model="ir.ui.view">
        <field name="name">season.form</field>
        <field name="model">season</field>
        <field name="arch" type="xml">
            <form string="Season">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>

                            <field name="name"/>
                        </group>
                        <group>
                            <h1><field name="ref" nolabel="1" readonly="True"/></h1>
                        </group>

                    </group>
                    <group>
                        <field name="product_id" widget="many2many_tags"/>
                        <field name="product_template_id" widget="many2many_tags"/>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" colspan="4" nolabel="1"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_season_show" model="ir.actions.act_window">
        <field name="name">Seasons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">season</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No season found. Let's create one!
            </p>
            <p>
                Season allow you to define group of product to be labeled as for custom season production.
            </p>
        </field>
    </record>
</odoo>