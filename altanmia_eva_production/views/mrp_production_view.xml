<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_plan_form" model="ir.ui.view">
            <field name="name">mrp_production_plan.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='product_qty']" position="before">
                        <field name="plan_id" readonly="1" attrs="{ 'invisible': [('plan_id', '=', False)]}"/>
                        <field name="project_task_id" readonly="1" attrs="{ 'invisible': [('project_task_id', '=', False)]}"/>
                </xpath>
            </field>
    </record>
</odoo>